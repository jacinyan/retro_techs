<h1>Make order</h1>

<%= simple_form_for @order do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="row">
  <div class="col-md-6">

    <div class="form-inputs">
      <%= f.input :name %>
    </div>
    <div class="form-inputs">
      <%= f.input :address %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>

  </div>  
</div>

<% end %>




    



