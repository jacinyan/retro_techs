<% content_for :title do %>Order Placement<% end %>
<%= simple_form_for @order do |f| %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="container">
    <h4>Confirm Details</h4>
    <div class="row">
      <div class="col-md-6">
        <div class="form-inputs">
          <%= f.input :name %>
        </div>
        <div class="form-inputs">
          <%= f.input :address %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, input_html: { value: 'Confirm' } %>
        </div>
      </div>
    </div>
  <% end %>
  <div class='back'>
    <%= link_to 'Back', :back %>
  </div>
</div>
