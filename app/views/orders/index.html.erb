<% content_for :title do %>Orders<% end %>
<h2>Orders</h2>

<table class="table table-sm table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Customer Name</th>
        <th>Address</th>
        <th>Time</th>
        <th>View</th>
      </tr>
    </thead>

    <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= order.name %>
                </td>
                <td>
                  <%= order.address %>
                </td>
                <td>
                  <%= order.created_at%>
                </td>
                <td>
                  <%= link_to("Show", order_path(order), class: 'btn') %>
                </td>
              </tr>
            <% end %>
    </tbody>

</table>