<h2>Cart show</h2>

<ul>
  <% current_cart.order_items.each do |order_item| %>
    <li>Item: <%= order_item.item.name %></li>
    <li>Price: <%= number_to_currency(order_item.item.price) %></li>
    <li>Quantity: <%= order_item.quantity %></li>

    <ul>
      <li>
        <%= link_to "Remove item", order_item_path(order_item), method: :delete %>
      </li>
    </ul>
  
  <% end %>
</ul>

